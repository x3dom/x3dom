        </Collision>
        <ROUTE fromField='fraction_changed' fromNode='Clock' toField='set_fraction' toNode='Mover'/>
        <ROUTE fromField='value_changed' fromNode='Mover' toField='set_translation' toNode='Movee'/>
      </ProtoBody>
    </ProtoDeclare>
    
