#X3D V4.0 utf8
PROFILE Full

FontLibrary {
  url "../DejaVuSans-BoldOblique.ttf"
  family "my boldoblique custom family"
}

Shape {
  appearance Appearance { material Material { diffuseColor 1 1 0 } }
    geometry Text {
    string ["Hello World!"]
    fontStyle FontStyle {
      # Should we choose "my boldoblique custom family"?
      # FontStyle.style is default, so "PLAIN", yet the TTF has bold+italic.
      family "my boldoblique custom family"
    }
  }
}

Shape {
  appearance Appearance { material Material { diffuseColor 1 1 0 } }
    geometry Text {
    string ["Hello World 2!"]
    fontStyle FontStyle {
      # Should we choose "my custom family name"?
      # FontStyle.style is "BOLD", yet the TTF has bold+italic.
      family "my custom family name"
      style "BOLD"
    }
  }
}
