        }


        function StepResponseCoreE(T)
        {
            var A= .5 - .5 * Math.cos(T * Math.PI);

          var cFrequency= 2.5;
            var B= 1 - Math.cos(T * 2 * Math.PI * cFrequency) * Math.sin(Math.sqrt(1 - T) * Math.PI/2);

        return A * .8 + B * .2;
