            ?>
            <tr><td>Status:</td>
                <td><div class="<?js= myClass ?>"><?js= (doc.status === 'full' ? 'fully implemented' : doc.status ) ?></div></td>
            </tr>



            <?js
            } ?>
        </table>
        </div>
    <?js } ?>

    <div class="well" style="width:300px;clear:right;float:right;margin-left: 20px;">

